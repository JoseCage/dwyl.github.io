    <header>
      <img id='logo' alt='dwyl logo' src="/images/dwyl-logo-pure-white.png"/>
      <div id="nav">
        <div id="social-header">
          <a href="https://twitter.com/dwylhq"><i class="fa fa-twitter"></i></a>
          <a href="mailto:hello@dwyl.io"><i class="fa fa-envelope-o"></i></a>
          <a href="https://instagram.com/dwylhq"><i class="fa fa-instagram"></i></a>
        </div>
        <div></div>
        <ul>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
    </header>
    
    
    <%- yield %>
    
    
    <footer>
      <!-- Contact form and feeds -->
      
      <form id="contact">
          <label class="sr-only" for="email">Email address</label>
            <input type="email" required placeholder="Your email address" name="email" id="email"/>
          <label class="sr-only" for="text">Your message</label>
            <textarea name="textarea" rows="10" cols="50" placeholder="How can we help?"></textarea>
          <button type="submit">Send</button>
      </form>
      
      <div id="blogreel">
        <h3>Latest blog articles</h3>
        <ul>
          <li>Article 1</li>
          <li>Article 2</li>
          <li>Article 3</li>
        </ul>
      </div>
      
    </footer>
    
